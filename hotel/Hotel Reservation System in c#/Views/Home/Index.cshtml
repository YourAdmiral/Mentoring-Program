@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-height:20em">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="max-height:20em">
            <div class="item active">
                <img src="~/Images/Hotels Rooms/premiere 1_1920x960.jpg" alt="Chania" class="center-block" style="max-height:20em">
                <div class="carousel-caption top">
                    <h3>Rooms</h3>
                    <p>Get several types of rooms!</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/bicycle-3045580__480.jpg" class="center-block" alt="Chicago" style="max-height:20em">
                <div class="carousel-caption">
                    <h3>High comfort</h3>
                    <p>You can include a lot of stuff to your reservation</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/winning-back-a-client.jpg" class="center-block" alt="New York" style="max-height:20em">
                <div class="carousel-caption">
                    <h3>Customer Satisfaction?</h3>
                    <p>We love every customer and will do the best to serve you better.</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4 fa-border" 
         style="background-color:lightgray; border-width:1em">
        <h2>Getting started</h2>
        <p>
            Create Account in a few simple steps and become eligible to book the best rooms.
        </p>
        <p>@Html.ActionLink("Get Started", "Register", "Account")</p><br />
    </div>
    <div class="col-md-4 fa-border" 
         style="background-color:lightblue; border-width:1em">
        <h2>Book Available Rooms</h2>
        <p>Only available rooms can be booked. Click to secure a room for your self and experience the best of luxuries.</p>
        <p>@Html.ActionLink("Am Interested!", "Create", "Room_Usage")</p><br />
    </div>
    <div class="col-md-4 fa-border"
         style="background-color:lightgray; border-width:1em">
        <h2>Booking History</h2>
        <p>View your history and explore your past lodgings. We have an advance search with which you can query your history with us.</p>
        <p>@Html.ActionLink("Am Interested!", "Index", "Room_Usage")</p>
    </div>
</div>